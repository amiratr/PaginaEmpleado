<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Empleado[0].Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Empleado[0].CI)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Empleado[0].FechaIngreso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Empleado[0].SueldoBasico)
            </th>
            <th>
